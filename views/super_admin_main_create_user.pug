doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(rel="stylesheet", href="/css/semantic.css")
        link(rel="stylesheet", href="/css/main.css")
    body 
        .ui.top.fixed.menu
            .item
                img.logo-img(src='/images/uzstat.png')
            .user-name=name
        div(style="padding: 90px 30px")
            .super-admin-navbar
                .ui.buttons.blue
                    a(href="/group").ui.blue.basic.button group yaratish
                    a(href="/group/user").ui.blue.button user yaratish
                    a.ui.blue.basic.button natijalarni ko'rish
            .ui.attached.message
                .header Welcome to our site!
                p Fill out the form below to sign-up for a new account
            .ui.form.attached.fluid.segment
                .field
                    label Name
                    input(placeholder="Name", type="text", id='name')
                .four.fields
                    .field
                        label User Name
                        input(placeholder="User Name", type="text", id='user_name')
                    .field
                        label Password
                        input(placeholder="Password", type="password", id='password')
                    .field
                        label Group
                        input(placeholder="Group", type="text", id='group')
                    .field
                        label(for="status") Status
                        select#status.ui.dropdown
                            option(value="3") Xodim
                            option(value="2") Admin
                .inline.field
                    .ui.blue.submit.button Submit
            .ui.bottom.attached.error.message
                i.icon.help
                | Already signed up? 
                a(href="#") Login here
                |  instead.
        script(src="/js/jquery.js")
        script(src="/js/axios.js")
        script(src="/js/group.js")